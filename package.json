{
  "name": "moviemeter-backend",
  "version": "1.0.0",
  "description": "A backend repo for movie-reviews web application built from Java Spring Boot and using MongoDB for database",
  "main": "dist/src/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/src/server.js",
    "build": "tsc -p tsconfig_prod.json",
    "dev": "nodemon --exec npx tsx src/server.ts",
    "test": "jest --config jest.config.ts --detectOpenHandles --forceExit",
    "testAuth": "jest --config jest.config.ts --detectOpenHandles --forceExit ./src/tests/auth.test.ts",
    "lint": "eslint . --ext .ts",
    "prod": "tsc -p tsconfig_prod.json && pm2 start ecosystem.config.cjs --env production"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fs": "^0.0.1-security",
    "google-auth-library": "^9.11.0",
    "https": "^1.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.8.0",
    "mongoose": "^8.5.0",
    "multer": "^1.4.5-lts.1",
    "path": "^0.12.7",
    "punycode": "^2.3.1",
    "selfsigned": "^2.4.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "url": "^0.11.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.11",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "tsx": "^3.1.0",
    "typescript": "^5.5.3"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
